<% if(success != "") { %>
    <div class="alert alert-success col-6  alert-dismissible fade show offset-3" role="alert" style="margin-top: 1rem; font-weight: 500; font-size: 1.1rem; position: relative;" id="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <div class="alert-timer"></div>
    </div>
<% } %>

<% if(failure != "") { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="margin-top: 1rem; font-weight: 500; font-size: 1.1rem; position: relative;" id="alert">
        <%= failure %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <div class="alert-timer"></div>
    </div>
<% } %>

<script>
    const alert = document.getElementById("alert");
    function removeMssg () {
        alert.remove();
    }
    setTimeout(removeMssg, 3000);
</script>