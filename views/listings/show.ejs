<% layout("/layouts/boilerPlate") %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<br>
<h3 class="offset-1 listing-title"><%= listing.title %></h3>
<div class="wrapper">
  <div class="show-card offset-1 mt-3 shadow-sm" style="border: none; width: 50rem; padding: 1rem;">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="no-img" style="width: 47rem; border-radius: 10px; height: 30rem;">
    <div class="card-body">
      <p class="card-text">
        <h5>Description</h5>
        <p><%= listing.description %></p>
        <h5>Location</h5>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
        <h5>Date</h5>
        <p>Created at <%= listing.date.toLocaleString() %></p>
      </p>
      <% if(currUser && listing.owner._id.equals(currUser._id))  { %>
        <div class="btns" style="display: flex; margin-top: 1.3rem;">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark" style="background-color: #fe424d; border: none; margin-right: 1rem; width: 6rem;">Edit</a>
          <form method="post" action="/listings/<%= listing._id %>?_method=Delete">
              <button class="btn btn-dark" style="border: none; margin-right: 1rem; width: 6rem;">Delete</button>
          </form>
        </div>
      <% } %>
      <% if(currUser) { %>
        <form id="payForm" action="/createOrder" method="POST">
          <input type="hidden" name="name" value="<%= listing.title %>">
          <input type="hidden" name="description" value="<%= listing.description %>">
          <input type="hidden" name="amount" value="<%= listing.price * 100 %>">
          <input type="hidden" name="ownerName" value="<%= listing.owner.username %>">
          <input type="hidden" name="ownerNumber" value="<%= listing.owner.phone %>">
          <input type="hidden" name="ownerEmail" value="<%= listing.owner.email %>">
          <button type="submit" id="payBtn" value="Pay-Now" class="btn btn-dark" style="border: none; margin-right: 1rem; width: 6rem;">Buy Item</button>
        </form>

      <% } %>
    </div> 
    <!-- Reviews -->
    <hr>
    <div class="mt-3 col-8 offset-1">
      <% if(currUser) { %>
        <h4>Leave a review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
        <!-- <div>
          <label for="rating" class="form-label">Rating: </label>
          <input type="range" name="review[rating]" id="rating" class="form-range"  min="1" max="5">
        </div> -->
        <fieldset class="starability-fade">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" checked/>
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        <div>
          <label for="comment" class="form-label">Comments: </label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" placeholder="Type your review here..." required></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark mb-3 mt-3" id="Submit">Submit</button>
      </form>
      <hr><br>
        <% } %>
      <div class="row">
        <% for(review of listing.reviews) { %>
          <div class="card col-5 mb-3 ms-3 review-card" style="padding: 1rem;">
            <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result" data-rating= <%= review.rating %>></p>
                <p class="card-text"><%= review.comment %></p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete" class="mt-2 mb-3" method="post">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
            <p style="font-size: 0.8rem;">
              <%= review.date.toLocaleString() %>
            </p>
        </div>
        <% } %>
      </div>
    </div>
    <!-- Map -->
    <h2>Current Location</h2><br>
    <div id="map"></div>
  </div>
  <div class="contact">
    <div class="amount shadow-sm">
      <form action="/listings/<%= listing._id %>/addFav" method="post" id="favForm">
        <% if(currUser) { %>
          <i id="like" class="fa-solid fa-heart"
            style="position: absolute; top: 1rem; right: 4rem; font-size: 1.2rem; cursor: pointer; color: black;"></i>
        <% } %>
      </form>
      <h6>Price before tax : &#8377;<%= listing.price.toLocaleString("en-IN") %></h6>
      <h6>Taxes : <%= listing.tax %>%</h6>
      <h6>Price after taxes :</h6>
      <h4><b>&#8377;&nbsp;<%= (listing.price + (listing.price*listing.tax/100)).toLocaleString("en-IN") %></b></h4>
      <i id="share" class="fa-solid fa-share-nodes" style="position: absolute; top: 1rem; right: 1.5rem; font-size: 1.2rem; cursor: pointer;"></i>
      <div style="font-size: 0.8rem; display: flex; justify-content: space-between; text-align: center; "><%= listing.location %>,<%= listing.country %></div>
    </div>
    <div class="seller mt-3 shadow-sm">
      <h3 style="margin-bottom: 1rem;"><i class="fa-solid fa-user" style="font-size: 1.4rem;"></i>&nbsp;<%= listing.owner.username %></h3>
      <a href="/chat/<%= listing._id %>"><div class="chatBtn">Chat with seller</div></a>
      <a href="#" style="text-decoration: none;">
        <i class="fa-solid fa-phone"></i>
        <% if(listing.owner.phone != null) { %>
          <%= listing.owner.phone %>
        <% } %>
      </a>
    </div>
  </div>
</div>
<hr>

<script>
  const share = document.getElementById("share");
  const title = window.document.title;
  const url = window.document.location.href;
  share.addEventListener("click", (event)=>{
    if(navigator.share) {
      navigator.share({
        title : "Share this page",
        url : `${url}`,
      }).then(()=>{
        console.log("Thanks for sharing")
      }).catch((err)=>{
        console.log(err);
      })
    } else {
      alert("Browser doesn't support this webshare API");
    }
  })

  const like = document.getElementById("like");

  like.addEventListener(onclick ,()=>{
    $('#favForm').submit();
  })
</script>

<!-- razorpay -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  function handleRazorpay (e) {
      e.preventDefault();

      var formData = $(this).serialize();

      $.ajax({
        url: "/createOrder",
        type: "POST",
        data: formData,
        success: function (res) {
          if (res.success) {
            var options = {
              "key": res.key_id,
              "amount": res.amount,
              "currency": "INR",
              "name": res.product_name,
              "description": res.description,
              "order_id": res.order_id,
              "handler": function (response) {
                alert("Payment Succeeded");
                window.location.reload();
              },
              "prefill": {
                "contact": res.contact,
                "name": res.name,
                "email": res.email
              },
              "notes": {
                "description": res.description,
              },
              "theme": {
                "color": "#2300a3"
              }
            };
            window.razorpayObject = new Razorpay(options);
            razorpayObject.on('payment.failed', function (response) {
              alert("Payment failed");
            });
            document.getElementById("payBtn").onclick = function() {
              razorpayObject.open();
            }
          }
          else {
            alert(res.mssg);
          }
        }
      })
    }
    $('#payForm').submit(handleRazorpay);
</script>
